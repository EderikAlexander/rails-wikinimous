<%= form_for(@article, :html => { :style => 'form-group' }) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control" %>

  <%= f.label :content %>
  <%= f.text_area :content, class:"form-control" %>

  <%= f.submit class: "btn btn-primary", style:"margin-top: 20px;" %>
<% end %>
